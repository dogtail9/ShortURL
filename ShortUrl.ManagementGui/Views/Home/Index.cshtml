@model ShortUrl.ManagementGui.ModelsAndClaims
@using Microsoft.AspNetCore.Authentication

@{
    ViewData["Title"] = "Home Page";
}

@if ((await AuthorizationService.AuthorizeAsync(User, "Kille")).Succeeded)
{
    <h1>Kille</h1>
}
@if ((await AuthorizationService.AuthorizeAsync(User, "Tjej")).Succeeded)
{
    <h1>Tjej</h1>
}
<p>
    @if ((await AuthorizationService.AuthorizeAsync(User, "AdminPolicy")).Succeeded)
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Key
            </th>
            <th>
                Url
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShortUrlModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                @if ((await AuthorizationService.AuthorizeAsync(User, "AdminPolicy")).Succeeded)
                {
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<h2>Claims</h2>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>MVC Properties</h2>

<dl>
    @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>

<h2>AccessToken</h2>

@Model.AccessToken

<h2>Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Type
            </th>
            <th>
                Value
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MyClaims)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
            </tr>
        }
    </tbody>
</table>

